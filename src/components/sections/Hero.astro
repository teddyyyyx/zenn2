---
import { Image } from "astro:assets";
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import ByNumber from "./ByNumber.astro";

---

<section class="relative pt-32 lg:pt-28">
    <Container className={"flex flex-col lg:flex-row gap-10 lg:gap-12 lg:mt-40"}>
        <div class="absolute w-full lg:w-1/2 inset-y-0 lg:right-0 ">
            <span class="absolute -left-6 md:left-4 top-24 lg:top-28 w-24 h-24 rotate-90 skew-x-12 rounded-3xl bg-green-400 blur-xl opacity-60 lg:opacity-95 lg:block hidden"></span>
            <span class="absolute right-4 bottom-12 w-24 h-24 rounded-3xl bg-primary blur-xl opacity-80"></span>
        </div> 
        <span class="w-4/12 lg:w-2/12 aspect-square bg-gradient-to-tr from-primary to-green-400 absolute -top-5 lg:left-0 rounded-full skew-y-12 blur-2xl opacity-40 skew-x-12 rotate-90"></span>
        <div class="relative flex flex-col  text-start lg:text-left lg:py-7 xl:py-8 
        lg:items-start lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">
            
            <h1 class="text-4xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
             font-bold text-heading-1">
             Crafting Websites that Fits Your Business<span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"></span> 
            </h1>

            <Paragraph className="mt-5">
               We build 100% purely hand-coded websites with superior performance. No bloated WordPress or any slow page builders.
            </Paragraph>

            <div class="flex gap-3">
                <!-- First button remains in "primary" variant -->
                <Button variant={"primary"} className={"min-w-max text-white mt-4"}>
                    <span class=" sm:flex relative z-[5]">
                        Get Started
                    </span>
                </Button>
                <!-- Second button with "white" variant -->
                <Button variant={"white"} className={"min-w-max mt-4"}>
                    <span class=" sm:flex relative z-[5]">
                        Contact Us
                    </span>
                </Button>
            </div>
            </div>
        </div>

        <div class="flex flex-1 lg:w-1/2 lg:h-auto relative lg:max-w-none lg:mx-0 mx-auto max-w-3xl">
            <Image 
                src="https://oakharborwebdesigns.com/assets/images/laptop-b5a6f8bb5a5b0d82e64f935785c840f0.avif" 
                alt="Hero image"
                width={2350}
                height={2359}
                class="lg:absolute ml-12 mt-5 sm:mt-0 sm:ml-12 lg:w-full lg:h-full rounded-3xl object-cover lg:max-h-none max-h-96 overflow-visible" 
            />
        </div>
        
        
    </Container>

    <!-- <ByNumber/> -->
</section>