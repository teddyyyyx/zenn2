---
import blogs from '../blog/blogOverview.json'
import Paragraph from '../shared/Paragraph.astro'
import Title from '../shared/Title.astro'
import benz_img from '../../images/benz.png'
import { Image } from 'astro:assets'
---
<section>
<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
<div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
    <Title>Blog</Title>
    <Paragraph >
        Explore our blog for valuable insights on websites and their essential role in driving business success
    </Paragraph>
</div>

<div class="grid gap-8 lg:grid-cols-2">
    {blogs.map((blog) => (
    <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
        <div class="flex justify-between items-center mb-5 text-gray-500">
        <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800">
            <svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d={blog.typeIcon}></path>
            </svg>
            {blog.category}
        </span>
        <span class="text-sm">{blog.date}</span>
        </div>
        <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
        <a href="#">{blog.title}</a>
        </h2>
        <p class="mb-5 font-light text-gray-500 dark:text-gray-400">{blog.description}</p>
        <div class="flex justify-between items-center">
        <div class="flex items-center space-x-4">
            <Image class="w-7 h-7 rounded-full" src={benz_img} alt="Blog Author" />
            <span class="font-medium dark:text-white">{blog.author}</span>
        </div>
        <a href="#" class="inline-flex items-center font-medium text-primary-600 dark:text-primary hover:underline">
            Read more
            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
        </a>
        </div>
    </article>
    ))}
</div>
</div>
</section>
