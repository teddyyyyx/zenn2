---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
---

<Container>
    <section class="">
        <div class="py-8 lg:py-16  mx-auto max-w-screen-md">
            <div class="text-center">
                <Title>Contact Us</Title>
            </div>
            <p class="mb-8 lg:mb-16 font-light text-center text-gray-500 dark:text-gray-400 sm:text-xl">Message us to discuss your project, ask questions, or request a quote. Here to help bring your vision to life. <br>
                <br>
                Free Consultations!
                Don't hesitate to message :)
            </p>
            <form action="#" class="space-y-8 bg-gray-100  dark:bg-gray-900 p-8 lg:p-16 rounded-md px-auto flex flex-col">
                <div>
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Name</label>
                    <input type="text" id="name" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="Enter Name" required>
                </div>
                <div>
                    <label for="subject" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Contact Info</label>
                    <input type="text" id="subject" class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="Let us know where to contact you" required>
                </div>
                <div class="sm:col-span-2">
                    <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Your message</label>
                    <textarea id="message" rows="6" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Send us a message! Let's discuss how your business can standout..."></textarea>
                </div>
                <button type="submit" class=" py-3 px-5 text-sm font-medium text-center text-white bg-primary rounded-full bg-primary-700 sm:w-fit hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary dark:hover:bg-primary-100 dark:focus:ring-primary-800">Send message</button>
            </form>
        </div>
      </section>
      
</Container>